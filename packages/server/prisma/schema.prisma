generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid(2))
  email     String     @unique
  firstName  String?
  lastName  String?
  providers Provider[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

enum ProviderType {
  CREDENTIAL
  GOOGLE
}

model Provider {
  id            String   @id @default(cuid(2))
  type          ProviderType
  providerId    String
  profileUrl     String?
  emailVerified  Boolean  @default(false)
  expiresAt     DateTime?
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}
